{
  "name": "bazel-testexplorer",
  "displayName": "Bazel-TestExplorer",
  "description": "A VS Code extension to run and manage Bazel tests.",
  "version": "0.1.15",
  "icon": "images/icon_Bazel_TestExplorer.png",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Testing"
  ],
  "publisher": "tragisch",
  "repository": {
    "type": "git",
    "url": "https://github.com/tragisch/Bazel-TestExplorer.git"
  },
  "bugs": {
    "url": "https://github.com/tragisch/Bazel-TestExplorer/issues"
  },
  "activationEvents": [
    "workspaceContains:**/MODULE.bazel",
    "workspaceContains:**/WORKSPACE"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.reloadBazelTests",
        "title": "Bazel-TestExplorer: Reload Tests"
      },
      {
        "command": "bazelTestExplorer.showTestMetadata",
        "title": "Bazel-TestExplorer: Show Metadata for Test Target"
      },
      {
        "command": "bazelTestExplorer.showSelectedTestMetadata",
        "title": "Bazel-TestExplorer: Show Selected Test Metadata"
      },
      {
        "command": "bazelTestExplorer.showTestHistory",
        "title": "Bazel-TestExplorer: Show Test History"
      },
      {
        "command": "bazelTestExplorer.openHistoryItem",
        "title": "Bazel-TestExplorer: Open Test History Item"
      },
      {
        "command": "bazelTestExplorer.rerunTestFromHistory",
        "title": "Bazel-TestExplorer: Rerun Test From History"
      },
      {
        "command": "bazelTestExplorer.openSettingsView",
        "title": "Bazel-TestExplorer: Open Test Settings View"
      }
    ],
    "menus": {
      "testing/item/context": [
        {
          "command": "bazelTestExplorer.showTestMetadata",
          "when": "view == workbench.view.testing",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "Bazel Test Explorer",
      "properties": {
        "bazelTestRunner.testTypes": {
          "type": "array",
          "description": "List of Bazel test types to detect",
          "default": [
            "cc_test"
          ],
          "items": {
            "type": "string"
          }
        },
        "bazelTestRunner.queryPaths": {
          "type": "array",
          "description": "List of relative Bazel paths (i.e. //tests) where tests should be queried. If left empty, defaults to querying the entire workspace ('//...').",
          "default": [],
          "items": {
            "type": "string"
          }
        },
        "bazelTestRunner.sequentialTestTypes": {
          "type": "array",
          "description": "List of test types (i.e. 'java_test') that should be run sequentially instead of in parallel.",
          "default": [
            "java_test"
          ],
          "items": {
            "type": "string"
          }
        },
        "bazelTestRunner.testArgs": {
          "type": "array",
          "description": "Additional command line arguments to pass to 'bazel test'. Example: ['--config=ci', '--build_tests_only', '--runs_per_test=2', etc.]",
          "default": [],
          "items": {
            "type": "string"
          }
        },
        "bazelTestRunner.failLinePatterns": {
          "type": "array",
          "description": "Custom regular expressions to extract file and line from test failures. The first two capture groups must be filename and line number.",
          "default": [
            "^(.+?):(\\d+): Failure"
          ],
          "items": {
            "type": "string"
          }
        },
        "bazelTestRunner.enableTestCaseDiscovery": {
          "type": "boolean",
          "description": "Experimental: Enable discovering individual test cases by running tests (currently: only for some test types, and slow).",
          "default": false
        },
        "bazelTestRunner.discoveryCacheMs": {
          "type": "number",
          "description": "Time-to-live in milliseconds for cached test case discovery results. Lower values cause more frequent re-discovery but ensure fresher results.",
          "default": 15000,
          "minimum": 1000
        },
        "bazelTestRunner.flaky": {
          "type": "boolean",
          "description": "Treat some tests as flaky and enable retry UI/logic.",
          "default": false
        },
        "bazelTestRunner.retryCount": {
          "type": "number",
          "description": "Number of automatic retries for flaky tests.",
          "default": 1,
          "minimum": 0
        },
        "bazelTestRunner.bazelFlags": {
          "type": "array",
          "description": "Additional Bazel flags to append to Bazel invocations for tests (e.g. --test_output=errors).",
          "default": [],
          "items": {
            "type": "string"
          }
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "bazelTestExplorer.settingsView",
          "name": "Bazel Test Settings"
        },
        {
          "id": "bazelTestExplorer.history",
          "name": "Bazel Test History"
        }
      ]
    }
  },
  "scripts": {
    "compile": "npm run check-types && tsc -p tsconfig.json && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "build-tests": "tsc -p tsconfig.json",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production",
    "test": "vscode-test",
    "build": "npm run compile"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.30",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.21.0",
    "knip": "^5.47.0",
    "mocha": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "brace-expansion": "^4.0.0",
    "fast-glob": "^3.3.3",
    "glob": "^10.3.0"
  }
}